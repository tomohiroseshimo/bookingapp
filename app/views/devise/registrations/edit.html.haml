%h2
  プロフィールの編集
  -# #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :名前
    %br/
    = f.text_field :name
  .field
    = f.label :電話番号
    %br/
    = f.number_field :tellnumber
  .field
    = f.label :住所
    %br/
    = f.text_field :address, size: 40
  .field
    = f.label :emailアドレス
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    = f.label :パスワード
    %i (変更が必要ない場合は空白のままでお願いします)
    %br/
    = f.password_field :password, autocomplete: "new-password"
    - if @minimum_password_length
      %br/
      %em
        = @minimum_password_length
        文字以上の入力をお願いします
  .field
    = f.label :パスワードの確認
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :現在のパスワード
    %i (プロフィールの変更にはパスワードが必要です)
    %br/
    = f.password_field :current_password, autocomplete: "current-password"
  .actions
    = f.submit "編集する"
%h3 アカウントを削除する
%p
  ⬇️のボタンで削除できます #{button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "本当に削除してもよろしいですか?" }, method: :delete}
= link_to "戻る", :back
